<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:id="@+id/textPrix"
        android:layout_weight="0.05"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />


    <TextView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/textviewdepart"
        android:layout_marginTop="17dp" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/textViewarrivée"
        android:layout_alignBaseline="@+id/textviewdepart"
        android:layout_alignBottom="@+id/textviewdepart"
        android:layout_toRightOf="@+id/textviewdepart"
        android:layout_toEndOf="@+id/textviewdepart" />

    <TextView

        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:id="@+id/textDateDepart"
        android:layout_weight="0.05"
        android:layout_alignBaseline="@+id/textFname"
        android:layout_alignBottom="@+id/textFname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/Driversurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewLname"
        android:layout_above="@+id/textDateDepart"
        android:layout_centerHorizontal="true" />

    <TextView

        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:id="@+id/textFname"
        android:layout_weight="0.00"
        android:text="@string/Drivername"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/textViewarrivée"
        android:layout_alignLeft="@+id/textViewLname"
        android:layout_alignStart="@+id/textViewLname" />
</RelativeLayout>